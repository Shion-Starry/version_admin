<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="edtState"
            type="app.desty.chat_admin.common.widget.DialogState" />

        <variable
            name="proxy"
            type="app.desty.chat_admin.common.widget.InputVerDialog.ProxyEvents" />

        <variable
            name="type"
            type="java.lang.Integer" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <app.desty.chat_admin.common.widget.base.BaseBoldTextView
            android:id="@+id/tv_et_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{edtState.getSubTitle(type)}"
            android:textSize="@dimen/text_lg"
            android:textColor="@color/grey_700"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Major Version" />

        <app.desty.chat_admin.common.widget.NoSelectionEditText
            drawable_focused_solidColor="@{@color/white}"
            drawable_focused_strokeColor="@{@color/chat_500}"
            drawable_focused_strokeWidth="@{2}"
            drawable_focused_radius="@{6}"
            drawable_solidColor="@{@color/white}"
            drawable_strokeColor="@{@color/grey_400}"
            drawable_strokeWidth="@{1}"
            drawable_radius="@{6}"
            android:id="@+id/et_input"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:text="@={edtState.getSpecified(type)}"
            android:inputType="number"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:cursorVisible="false"
            android:afterTextChanged="@{e -> proxy.getTextWatcher(type, e)}"
            app:layout_constraintTop_toBottomOf="@id/tv_et_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:background="@color/grey_300" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>