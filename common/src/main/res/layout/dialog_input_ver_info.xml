<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="dialogType"
            type="app.desty.chat_admin.common.enum_bean.DialogInputType" />

        <variable
            name="click"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <app.desty.chat_admin.common.widget.base.BaseTextView
            android:id="@+id/dlg_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="@{dialogType.finalTitle}"
            android:textSize="@dimen/text_base"
            android:textColor="@color/grey_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            bind:text="Edit Latest Version" />

        <app.desty.chat_admin.common.widget.base.BaseImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_close_tint"
            app:tint="@color/grey_700"
            android:layout_marginEnd="4dp"
            android:onClick="@{click::onClick}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dlg_title"
            app:layout_constraintBottom_toBottomOf="@id/dlg_title" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_200"
            app:layout_constraintTop_toBottomOf="@id/dlg_title" />

        <ScrollView
            android:id="@+id/sv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_max="180dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            app:layout_constraintTop_toBottomOf="@id/v_divider"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                drawable_radius="@{8}"
                drawable_solidColor="@{@color/white}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <include
                    android:id="@+id/editor1"
                    layout="@layout/item_dialog_editor"
                    bind:visible="@{true}"
                    bind:subtitle="@{dialogType.finalSubTitle}"
                    bind:inputText=""
                    bind:inputType="@{dialogType.finalInputType}" />

                <include
                    layout="@layout/item_dialog_editor"
                    bind:visible="@{dialogType.multiDisplay}"
                    bind:subtitle="@string/edit_subtitle_sub_version"
                    bind:inputText=""
                    bind:inputType="@{dialogType.finalInputType}" />

                <include
                    layout="@layout/item_dialog_editor"
                    bind:visible="@{dialogType.multiDisplay}"
                    bind:subtitle="@string/edit_subtitle_fix_version"
                    bind:inputText=""
                    bind:inputType="@{dialogType.finalInputType}" />

                <include
                    layout="@layout/item_dialog_editor"
                    bind:visible="@{dialogType.multiDisplay}"
                    bind:subtitle="@string/edit_subtitle_build_version"
                    bind:inputText=""
                    bind:inputType="@{dialogType.finalInputType}" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <app.desty.chat_admin.common.widget.base.BaseImageView
            drawable_solidColor="@{@color/chat_500}"
            drawable_radius="@{6}"
            normalSrc="@{@drawable/ic_check_tint}"
            normalTint="@{@color/color_white}"
            drawable_disabled_solidColor="@{@color/grey_300}"
            drawable_disabled_radius="@{6}"
            disabledSrc="@{@drawable/ic_check_tint}"
            disabledTint="@{@color/color_white}"
            android:id="@+id/iv_confirm"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:background="@color/chat_500"
            android:src="@drawable/ic_check_tint"
            app:tint="@color/white"
            android:onClick="@{click::onClick}"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sv_info"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>