<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="java.lang.String" />

        <variable
            name="imageUri"
            type="android.net.Uri" />

        <variable
            name="click"
            type="app.desty.chat_admin.common.widget.GlobalImageDialog.ClickProxy" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        drawable_radius="@{12}"
        drawable_solidColor="@{@color/color_white}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white">

        <app.desty.chat_admin.common.widget.base.BaseBoldTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@{title}"
            android:textColor="@color/grey_900"
            android:textSize="@dimen/text_base"
            app:layout_constraintTop_toTopOf="parent" />

        <app.desty.chat_admin.common.widget.base.BaseImageView
            android:id="@+id/iv_image"
            originalUrl="@{imageUri.toString()}"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />


        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey_100"
            app:layout_constraintTop_toBottomOf="@id/iv_image" />

        <app.desty.chat_admin.common.widget.base.BaseTextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:onClick="@{click::clickNegative}"
            android:text="@string/cancel"
            android:textColor="@color/grey_900"
            android:textSize="@dimen/text_sm"
            app:layout_constraintEnd_toStartOf="@id/v_vertical_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_divider" />

        <View
            android:id="@+id/v_vertical_divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:background="@color/grey_50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_positive"
            app:layout_constraintStart_toEndOf="@id/tv_negative"
            app:layout_constraintTop_toBottomOf="@id/v_divider" />

        <app.desty.chat_admin.common.widget.base.BaseBoldTextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:onClick="@{click::clickPositive}"
            android:text="@string/product_send"
            android:textColor="@color/chat_600"
            android:textSize="@dimen/text_sm"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/v_vertical_divider"
            app:layout_constraintTop_toBottomOf="@id/v_divider" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>