<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        
        <variable
            name="dialogTitle"
            type="java.lang.String" />

        <variable
            name="proxy"
            type="app.desty.chat_admin.common.widget.VersionPickerDialog.ProxyEvents" />
        
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="24dp" />

        <app.desty.chat_admin.common.widget.base.BaseTextView
            android:id="@+id/btv_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:text="@{dialogTitle}"
            android:textSize="@dimen/text_base"
            android:textColor="@color/grey_500"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/gl_left"
            bind:text="Edit Latest Version" />

        <app.desty.chat_admin.common.widget.base.BaseImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_close_tint"
            app:tint="@color/grey_700"
            android:onClick="@{proxy::clickClose}"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btv_title"
            app:layout_constraintBottom_toBottomOf="@id/btv_title" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_200"
            app:layout_constraintTop_toBottomOf="@id/btv_title" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llc_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/v_divider">

            <app.desty.chat_admin.common.widget.base.BaseBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/edit_subtitle_major"
                android:textColor="@color/grey_700"
                android:gravity="center"
                android:layout_weight="1" />

            <app.desty.chat_admin.common.widget.base.BaseBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/edit_subtitle_sub"
                android:textColor="@color/grey_700"
                android:gravity="center"
                android:layout_weight="1" />

            <app.desty.chat_admin.common.widget.base.BaseBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/edit_subtitle_fix"
                android:textColor="@color/grey_700"
                android:gravity="center"
                android:layout_weight="1" />

            <app.desty.chat_admin.common.widget.base.BaseBoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/edit_subtitle_build"
                android:textColor="@color/grey_700"
                android:gravity="center"
                android:layout_weight="1" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llc_ver_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llc_subtitle">
            
            <com.contrarywind.view.WheelView
                android:id="@+id/major"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                android:id="@+id/sub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                android:id="@+id/fix"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.contrarywind.view.WheelView
                android:id="@+id/build"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <app.desty.chat_admin.common.widget.base.BaseImageView
            drawable_radius="@{6}"
            drawable_solidColor="@{@color/chat_500}"
            normalSrc="@{@drawable/ic_check_tint}"
            normalTint="@{@color/color_white}"
            android:id="@+id/biv_confirm"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:background="@color/chat_500"
            android:src="@drawable/ic_check_tint"
            android:onClick="@{proxy::clickOk}"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llc_ver_picker"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>