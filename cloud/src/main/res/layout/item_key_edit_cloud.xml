<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="edtState"
            type="app.desty.chat_admin.cloud.pages.cloud_upload.CloudUploadViewModel" />

        <variable
            name="key"
            type="java.lang.String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <app.desty.chat_admin.common.widget.base.BaseTextView
            android:id="@+id/btv_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{key}"
            android:textColor="@color/grey_400"
            android:maxWidth="230dp"
            android:textSize="@dimen/text_lg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="key" />

        <app.desty.chat_admin.common.widget.base.BaseEditText
            android:id="@+id/bet_editor"
            drawable_focused_radius="@{6}"
            drawable_focused_solidColor="@{@color/white}"
            drawable_focused_strokeColor="@{@color/chat_500}"
            drawable_focused_strokeWidth="@{2}"
            drawable_radius="@{6}"
            drawable_solidColor="@{@color/white}"
            drawable_strokeColor="@{@color/grey_600}"
            drawable_strokeWidth="@{1}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="46dp"
            android:text="@={edtState.getSpecific(key)}"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/text_lg"
            android:enabled="@{edtState.setEditEnabled(key)}"
            android:gravity="center_vertical|start"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btv_key" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>