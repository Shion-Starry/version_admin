<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="mState"
            type="app.desty.chat_admin.cloud.pages.cloud_upload.CloudUploadViewModel" />

        <variable
            name="click"
            type="app.desty.chat_admin.cloud.pages.cloud_upload.CloudUploadActivity.ClickEvents" />

    </data>

    <app.desty.chat_admin.common.widget.ClearFocusConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            layout="@layout/layout_toolbar"
            bind:config="@{mState.toolbarConfig}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar">

            <include
                layout="@layout/layout_either_radio_group"
                bind:firstOption="@{@string/upload_ver_env_testing}"
                bind:secondOption="@{@string/upload_ver_env_production}"
                bind:env="@{mState.env}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_viewer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/cl_selector"
            app:layout_constraintBottom_toTopOf="@id/llc_upload_button"
            android:overScrollMode="never">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:divider="@drawable/divider_transparent_8"
                app:showDividers="beginning|middle|end">

                <include
                    layout="@layout/item_key_edit_cloud"
                    bind:key="@{@string/cloud_config_name}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_edit_cloud"
                    bind:key="@{@string/cloud_config_value}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/cloud_config_from_version}"
                    bind:displayText="@{mState.fromVersion}"
                    bind:click="@{click::clickFromVer}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/cloud_config_to_version}"
                    bind:displayText="@{mState.toVersion}"
                    bind:click="@{click::clickToVer}" />

                <include
                    layout="@layout/item_key_edit_cloud"
                    bind:key="@{@string/cloud_config_unique_id}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_edit_cloud"
                    bind:key="@{@string/cloud_config_channel}"
                    bind:edtState="@{mState}" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llc_upload_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/scroll_viewer"
            app:layout_constraintBottom_toBottomOf="parent">

            <app.desty.chat_admin.common.widget.base.BaseTextView
                android:id="@+id/tv_upload"
                style="@style/Chat.Button.Primary.Base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_ver_button_text"
                android:enabled="@{mState.canUpload}"
                android:onClick="@{click::clickUpload}" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </app.desty.chat_admin.common.widget.ClearFocusConstraintLayout>
</layout>