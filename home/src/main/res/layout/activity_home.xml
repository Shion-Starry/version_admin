<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="mState"
            type="app.desty.chat_admin.home.page.HomeViewModel" />

    </data>
        
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <include
                layout="@layout/layout_toolbar"
                bind:config="@{mState.toolbarConfig}" />

            <androidx.appcompat.widget.LinearLayoutCompat
                visible="@{mState.isHome}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:orientation="vertical">

                <app.desty.chat_admin.common.widget.base.BaseImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_welcome" />

                <app.desty.chat_admin.common.widget.base.BaseTextView
                    isBold="@{true}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp"
                    android:text="@string/welcome_admin_system"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_lg" />

                <app.desty.chat_admin.common.widget.base.BaseTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="58dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="58dp"
                    android:gravity="center"
                    android:text="@string/welcome_admin_system_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_sm" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <FrameLayout
                visible="@{!mState.isHome}"
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.appcompat.widget.LinearLayoutCompat>

</layout>