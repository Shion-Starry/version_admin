<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mState"
            type="app.desty.chat_admin.home.page.HomeViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="app.desty.chat_admin.home.page.HomeActivity">

        <include
            layout="@layout/layout_toolbar"
            bind:config="@{mState.toolbarConfig}" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_welcome" />

            <app.desty.chat_admin.common.widget.base.BaseTextView
                isBold="@{true}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="@string/welcome_admin_system"
                android:textColor="@color/black"
                android:textSize="@dimen/text_lg" />

            <app.desty.chat_admin.common.widget.base.BaseTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="58dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="58dp"
                android:gravity="center"
                android:text="@string/welcome_admin_system_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_sm" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>