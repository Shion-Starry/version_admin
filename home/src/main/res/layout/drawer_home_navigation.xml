<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="click"
            type="app.desty.chat_admin.home.page.HomeNavigationDrawer.ClickEvents" />

        <variable
            name="statusBarHeight"
            type="java.lang.Integer" />

        <variable
            name="adapter"
            type="app.desty.chat_admin.home.adapter.HomeNaviAdapter" />

        <import type="app.desty.chat_admin.common.enum_bean.HomePageType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        paddingIsDp="@{false}"
        paddingTop="@{statusBarHeight}"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@color/chat_100">

        <app.desty.chat_admin.common.widget.base.BaseImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:onClick="@{click::clickClose}"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_tint"
            app:layout_constraintBottom_toTopOf="@id/tv_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/chat_700" />

        <app.desty.chat_admin.common.widget.base.BaseTextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/actionBarHeight"
            android:background="@color/chat_700"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ifv_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:background="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_line"
            app:roundPercent="1" />

        <app.desty.chat_admin.common.widget.base.BaseImageView
            centerCrop="@{true}"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@color/chat_300"
            app:layout_constraintBottom_toBottomOf="@+id/ifv_avatar"
            app:layout_constraintEnd_toEndOf="@+id/ifv_avatar"
            app:layout_constraintStart_toStartOf="@+id/ifv_avatar"
            app:layout_constraintTop_toTopOf="@+id/ifv_avatar"
            app:roundPercent="1" />

        <app.desty.chat_admin.common.widget.base.BaseTextView
            isBold="@{true}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/username_default_administrator"
            android:textColor="@color/chat_800"
            android:textSize="@dimen/text_lg"
            app:layout_constraintBottom_toBottomOf="@id/ifv_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ifv_avatar"
            app:layout_constraintTop_toTopOf="@id/ifv_avatar" />

        <androidx.recyclerview.widget.RecyclerView
            adapter="@{adapter}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/cl_logout"
            app:layout_constraintTop_toBottomOf="@id/ifv_avatar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <include
                layout="@layout/item_navigation_module"
                android:onClick="@{click::clickLogout}"
                bind:data="@{HomePageType.Logout}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>