<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        
        <variable
            name="mState"
            type="app.desty.chat_admin.upload.page.upload_new.UploadNewViewModel" />
        
        <variable
            name="click"
            type="app.desty.chat_admin.upload.page.upload_new.UploadNewActivity.ClickEvents" />
        
    </data>

    <app.desty.chat_admin.common.widget.ClearFocusConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            layout="@layout/layout_toolbar"
            bind:config="@{mState.toolbarConfig}" />

<!--        <app.desty.chat_admin.common.widget.base.BaseBoldTextView-->
<!--            android:id="@+id/btv_title"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:paddingTop="8dp"-->
<!--            android:text="@string/upload_new_title"-->
<!--            android:textColor="@color/grey_900"-->
<!--            android:textSize="@dimen/text_lg"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent" />-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar">

            <include
                layout="@layout/layout_either_radio_group"
                bind:firstOption="@{@string/upload_ver_env_testing}"
                bind:secondOption="@{@string/upload_ver_env_production}"
                bind:env="@{mState.env}"
                bind:clickFirstOp="@{click::clickFirstOp}"
                bind:clickSecondOp="@{click::clickSecondOp}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scroll_viewer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/cl_selector"
            app:layout_constraintBottom_toTopOf="@id/cl_upload_button">

            <androidx.appcompat.widget.LinearLayoutCompat
                drawable_radius="@{8}"
                drawable_solidColor="@{@color/white}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:divider="@drawable/divider_transparent_8"
                app:showDividers="beginning|middle|end">

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_channel}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_latest_version}"
                    bind:displayText="@{mState.featureTextMap[`latestVersion`]}"
                    bind:click="@{click::clickLatestVer}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_latest_code}"
                    bind:displayText="@{mState.featureTextMap[`latestCode`]}"
                    bind:click="@{click::clickLatestVer}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_compat_version}"
                    bind:displayText="@{mState.featureTextMap[`compatVersion`]}"
                    bind:click="@{click::clickCompatVer}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_compat_code}"
                    bind:displayText="@{mState.featureTextMap[`compatCode`]}"
                    bind:click="@{click::clickCompatVer}" />

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_url}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_website_url}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_market_url}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_content}"
                    bind:edtState="@{mState}" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cl_upload_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@id/scroll_viewer"
            app:layout_constraintBottom_toBottomOf="parent">

            <app.desty.chat_admin.common.widget.base.BaseTextView
                android:id="@+id/tv_upload"
                style="@style/Chat.Button.Primary.Base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_ver_button_text"
                android:enabled="@{mState.canUpload}"
                android:onClick="@{click::clickUpload}" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </app.desty.chat_admin.common.widget.ClearFocusConstraintLayout>
</layout>