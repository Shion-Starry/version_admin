<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        
        <variable
            name="mState"
            type="app.desty.chat_admin.upload.page.upload_new.UploadNewViewModel" />
        
        <variable
            name="click"
            type="app.desty.chat_admin.upload.page.upload_new.UploadNewActivity.ClickEvents" />

        <variable
            name="verInfo"
            type="app.desty.chat_admin.common.bean.VersionInfo" />
        
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_50">

        <include
            layout="@layout/layout_toolbar"
            bind:config="@{mState.toolbarConfig}"/>

        <ScrollView
            visible="@{mState.showInfo}"
            android:id="@+id/scroll_viewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar">

            <androidx.appcompat.widget.LinearLayoutCompat
                drawable_radius="@{8}"
                drawable_solidColor="@{@color/white}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="8dp"
                app:divider="@drawable/divider_transparent_8"
                app:showDividers="beginning|middle|end">

                <app.desty.chat_admin.common.widget.base.BaseBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp"
                    android:text="@string/upload_new_title"
                    android:textColor="@color/grey_900"
                    android:textSize="@dimen/text_lg"
                    android:layout_gravity="center_horizontal" />

                <include
                    layout="@layout/item_version_key_edit"
                    bind:key="@{@string/latest_version_version_id}" />

                <include
                    layout="@layout/item_version_key_edit"
                    bind:key="@{@string/latest_version_name}" />

                <include
                    layout="@layout/item_version_key_edit"
                    bind:key="@{@string/latest_version_config_value}" />

                <include
                    layout="@layout/item_version_key_edit"
                    bind:key="@{@string/latest_version_latest_version}" />

                <include
                    layout="@layout/item_version_key_edit"
                    bind:key="@{@string/latest_version_compat_version}" />

                <include
                    layout="@layout/item_version_key_edit"
                    bind:key="@{@string/latest_version_channel}" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_50"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <app.desty.chat_admin.common.widget.base.BaseTextView
                android:id="@+id/tv_upload"
                style="@style/Chat.Button.Primary.Base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_ver_button_text" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>