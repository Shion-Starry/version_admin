<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        
        <variable
            name="mState"
            type="app.desty.chat_admin.upload.page.upload_new.UploadNewViewModel" />
        
        <variable
            name="click"
            type="app.desty.chat_admin.upload.page.upload_new.UploadNewActivity.ClickEvents" />
        
    </data>

    <app.desty.chat_admin.common.widget.ClearFocusConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <include
            layout="@layout/layout_toolbar"
            bind:config="@{mState.toolbarConfig}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_toolbar">

            <include
                layout="@layout/layout_either_radio_group"
                bind:firstOption="@{@string/upload_ver_env_testing}"
                bind:secondOption="@{@string/upload_ver_env_production}"
                bind:env="@{mState.env}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_viewer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/cl_selector"
            app:layout_constraintBottom_toTopOf="@id/llc_upload_button"
            android:overScrollMode="never">

            <androidx.appcompat.widget.LinearLayoutCompat
                drawable_radius="@{8}"
                drawable_solidColor="@{@color/white}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                app:divider="@drawable/divider_transparent_8"
                app:showDividers="beginning|middle|end">

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_channel}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_latest_version}"
                    bind:displayText="@{mState.latestVersion}"
                    bind:click="@{click::clickLatestVer}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_latest_code}"
                    bind:displayText="@{mState.latestCode}"
                    bind:click="@{click::clickLatestVer}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_compat_version}"
                    bind:displayText="@{mState.compatVersion}"
                    bind:click="@{click::clickCompatVer}" />

                <include
                    layout="@layout/item_key_text"
                    bind:key="@{@string/latest_release_compat_code}"
                    bind:displayText="@{mState.compatCode}"
                    bind:click="@{click::clickCompatVer}" />

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_url}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_website_url}"
                    bind:edtState="@{mState}" />

                <include
                    layout="@layout/item_key_edit"
                    bind:key="@{@string/latest_release_market_url}"
                    bind:edtState="@{mState}" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <app.desty.chat_admin.common.widget.base.BaseTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clear"
                        android:textColor="@color/blue_500"
                        android:textSize="@dimen/text_base"
                        android:onClick="@{click::clearContent}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/bet_editor" />

                    <include
                        layout="@layout/item_key_edit"
                        bind:key="@{@string/latest_release_content}"
                        bind:edtState="@{mState}" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/llc_upload_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/scroll_viewer"
            app:layout_constraintBottom_toBottomOf="parent">

            <app.desty.chat_admin.common.widget.base.BaseTextView
                android:id="@+id/tv_upload"
                style="@style/Chat.Button.Primary.Base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_ver_button_text"
                android:enabled="@{mState.canUpload}"
                android:onClick="@{click::clickUpload}" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </app.desty.chat_admin.common.widget.ClearFocusConstraintLayout>
</layout>